<?xml version="1.0"?>
<configuration>
  <appSettings>
    
    <!-- General parameters -->
    <add key="WindowWidth" value="800"/>
    <add key="WindowHeight" value="600"/>
    
    <!-- Neural network parameters -->
    <add key="InputCount" value="4"/>
    <add key="HiddenLayerCount" value="1"/>
    <add key="NeuronsPerHiddenLayer" value="8"/>
    <add key="OutputCount" value="2"/>
    <add key="ActivationResponse" value="1"/>
    <add key="Bias" value="-1"/>
    
    <!-- Sweepers parameters -->
    <add key="MaxTurnRate" value="0.3"/>
    <add key="SweeperScale" value="5"/>
    
    <!-- Controller parameters -->
    <add key="NumSweepers" value="30"/>
    <add key="NumMines" value="50"/>
    <add key="NumTicks" value="4000"/>
    <add key="MineScale" value="2"/>

    <!-- GA parameters -->
    <add key="CrossoverRate" value="0.7"/>
    <add key="MutationRate" value="0.1"/>
    <add key="MaxPerturbation" value="0.3"/>
    <add key="NumElite" value="4"/>
    <add key="NumCopiesElite" value="1"/>

  </appSettings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>
</configuration>
